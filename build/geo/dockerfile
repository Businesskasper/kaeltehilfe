FROM golang:1.26

ARG PROJECT_DIR="../../kaeltehilfe-geo"

# Set destination for COPY
WORKDIR /App

# Download Go modules
COPY ./publish-geo/go.mod ./
COPY ./publish-geo/go.sum ./
RUN go mod download

# Copy the source code. Note the slash at the end, as explained in
# https://docs.docker.com/reference/dockerfile/#copy
COPY ./publish-geo/ ./

# Build
RUN CGO_ENABLED=0 GOOS=linux go build -o /kaeltehilfe-geo ./cmd/api

EXPOSE 8080

# Run
CMD ["/kaeltehilfe-geo"]